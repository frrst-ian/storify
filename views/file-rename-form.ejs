<%- include("./partials/header") %>

<div class="form-container">
    <form class="form-contents" action="/file/<%=`${fileId}/rename`%>" method="POST" > 

        <h1 class="form-heading">File rename</h1>
        <div class="input-group">
            <label for="fileName"></label>
            <input name="fileName" id="fileName" type="text" placeholder="Rename file"
             value="<%=  fileName || '' %>" />
        </div>

        <div class="btn-group">
            <a href="/" class="btn secondary">Cancel</a>
            <button class="btn primary" type="submit">Submit</button>
        </div>
        
        <% if(typeof errorList !== 'undefined' && errorList.length > 0) {%>
            <ul class="error-msgs">
                <% errorList.forEach(e => { %>
                    <li><%=e.msg%></li>
               <% }) %>
            </ul>
            <% } %>
    </form>
</div>