<%- include("./partials/header") %>

<div class="form-container">
    <form action="/sign-up" method="POST">

        <h1 class="form-heading">Sign Up</h1>
        <div class="input-group">
            <label for="email" value="<% typeof email  !== "undefined" ? email : '' %>">Email</label>
            <input name="email" id="email" type="email"  placeholder="condoriano@onepiece.me">
        </div>

        <div class="input-group">
            <label for="fullName">Full Name</label>
            <input name="fullName" id="fullName" type="text"  placeholder="Con D. Oriano" value="<% typeof fullName  !== "undefined" ? fullName : '' %>">
        </div>

        <div class="input-group">
            <label for="password">Password</label>
            <input name="password" id="password" type="password">
        </div>

        <div class="input-group"><label for="confirmPassword">Confirm Password</label>
            <input type="password" name="confirmPassword" id="confirmPassword"></div>

        <button class="submit-btn" type="submit">Sign Up</button>

        <% if(typeof errorList !== 'undefined' && errorList.length > 0) {%>
            <ul class="error-msgs">
                <% errorList.forEach(e => { %>
                    <li><%=e.msg%></li>
               <% }) %>
            </ul>
            <% } %>
    </form>
</div>